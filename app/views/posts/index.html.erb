<h1>게시판</h1>

<div id="posts">
  <% @posts.each_with_index do |post, index| %>
    <p>
      <%= link_to(post) do %>
        <strong><%= index+1 %>. </strong>
        <%= post.title %>
      <% end %>
    </p>
  <% end %>
</div>

