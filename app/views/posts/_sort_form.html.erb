<%= form_tag(root_path, method: "get") do  %>
  <%= select_tag "sort", options_for_select([
          ["최신생성순", "created_at DESC"], 
          ["오래된생성순", "created_at ASC"], 
          ["최신수정순", "updated_at DESC"], 
          ["오래된수정순", "updated_at ASC"]], 
          :selected => params[:sort]) %>
  <%= submit_tag("정렬") %>
<% end %>
